<style>
	.devices-items { margin-bottom: 1rem; padding-top: .5rem; padding-left: 0; border-left: 0 }

	.devices-items .item { display: flex; margin-bottom: 1rem; align-items: start; justify-content: left }
	@media print {
		.devices-items .item { page-break-inside: avoid } }

	.devices-items .item > .type { background-color: #f0f0f0; width: 60px; line-height: 60px; color: #202020; font-size: 1.5em; text-align: center; border-radius: 50%; }

	.devices-items .item > .content { margin-left: 1rem; padding-left: 1rem; border-left: 2px solid #f0f0f0 }
	.devices-items .item > .content > * { margin-bottom: 5px; font-size: 14px }
	.devices-items .item > .content .date { font-weight: 500 }
	@media not print {
		.devices-items .item > .content .date { color: #c0c0c0 }
		.devices-items .item.toggle:hover > .meta .date,
		.devices-items .item.toggle:focus > .meta .date
			{ color: #d0d0d0 } }
	.devices-items .item > .content ul .icon { margin-top: 4px; margin-left: -40px; position: absolute }
	.devices-items .item > .content ul small { color: #c0c0c0; font-size: .9em; }
</style>
